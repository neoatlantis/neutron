{
    "manifest_version": 2,
    "name": "Neutron",
    "version": "1.0",
    "description": "Enhanced security for ProtonMail.",

    "icons": {
        "96": "icons/neutron-enabled.svg", 
        "48": "icons/neutron-enabled.svg" 
    },

    "browser_action": {
        "default_icon": {   
            "16": "icons/neutron-enabled.svg", 
            "32": "icons/neutron-enabled.svg" 
        },
        "default_title": "Neutron: Security enhancemet for ProtonMail.",
        "default_popup": "pages/introduction.html"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://protonmail.com/",
        "https://old.protonmail.com/",
        "https://beta.protonmail.com/",
        "https://mail.protonmail.com/"
    ],

    "background": {
        "scripts": [
            "frozenconstants.js",
            "certwhitelist.js",
            "scriptwhitelist.js",
            "headerfilter.js",
            "flashicon.js",
            "background.js"
        ]
    },

    "web_accessible_resources": [
        "pages/*",
        "pmscripts/*.js"
    ]
}
